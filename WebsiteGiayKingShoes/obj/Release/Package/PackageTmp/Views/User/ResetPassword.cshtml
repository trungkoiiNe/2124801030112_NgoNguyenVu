@model WebsiteGiayKingShoes.Models.User


@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/LayoutUser.cshtml";
}

<<div class="reset-mk container">
    <div class="row justify-content-center">
        <div class="col-md-6 mx-auto">
            @using (Html.BeginForm("ResetPassword", "User", FormMethod.Post, new { @class = "needs-validation", novalidate = "true" }))
            {
                @Html.HiddenFor(model => model.Email)
                @Html.HiddenFor(model => model.ResetCode)

                <div class="form-group">
                    @Html.LabelFor(model => model.MatKhau, new { @class = "control-label" })
                    @Html.PasswordFor(model => model.MatKhau, new { @class = "form-control", required = "required" })
                    <div class="invalid-feedback">Vui lòng nhập mật khẩu mới.</div>
                </div>

                <button type="submit" class="btn btn-primary btn-block">Đặt lại mật khẩu</button>
            }
        </div>
    </div>
</div>

<style>
    .reset-mk {
        margin-top: 150px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
    }
</style>
